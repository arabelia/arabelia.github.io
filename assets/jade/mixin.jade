//-mixin para todas las paginas solo enviando la url
mixin imagen(url)
	img.img-responsive(src= url)

//- titulo de cada seccion
mixin tituloSeccion(...items)
	.nombre
		each item in items
			span.efectoSeccion= item

mixin separadorSup()
	.separadorSeccion
		img(src='assets/images/separadorSup.png')

mixin separadorInf()
	.separadorSeccion
		img(src='assets/images/separadorInf.png')

//- nombre
mixin nombre(...items)
	.nombre
		each item in items
			span.efectoNombre= item

//- frase
mixin fraseInicial(a)
	.fraseInicial.enlinea
		p= a

//- sobre mi
mixin sobreMi(a,b)
	.sobreMi.corrida= a
	.sobreMi.corrida= b

//- intereses
mixin interes2(a,b)
	p.interes1= a
	p.interes1= b
mixin interes1(a)
	p.interes4= a

//- generador de cuadros de proyectos y su descripcio
mixin cuadros(href,src,texto)
	.cuadros
		a(href= href, target="_blank")
			img(src= src)
			.descripcion= texto
mixin menu(a,ah,b,bh,c,ch,d,dh,l1,lh1,l2,lh2,l3,lh3)
	#menu
		ul.list-unstyled.list-inline.poiret
			li
				a(href= ah)= a
			li
				a(href= bh)= b
			li
				a(href= ch)= c
			li
				a(href= dh)= d
			li
				a(href= lh1)
					img(src= l1)
			li
				a(href= lh2)
					img(src= l2)
			li
				a(href= lh3)
					img(src= l3)